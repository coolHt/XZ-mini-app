/* pages/mappage/mappage.wxss */

.btnMain {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: #2f78ff;
  color: #fff;
  height: 50px;
  font-size: 18px;
  font-weight: 600;
  line-height: 50px;
  padding: auto;
}

.btnLoc {
  max-width: 30px;
  max-height: 30px;
  position: absolute;
  bottom: 30px;
  right: 0px;
  background: rgba(255, 255, 255);
  margin: 10px;
  padding: 5px;
  border-radius: 5px;
  box-shadow: 2px 5px 5px #cdcdcd;
}

.btnList {
  max-width: 30px;
  max-height: 30px;
  position: absolute;
  bottom: 100px;
  right: 0px;
  background: rgba(255, 255, 255);
  margin: 10px;
  padding: 5px;
  border-radius: 5px;
  box-shadow: 2px 5px 5px #cdcdcd;
}

.btnVocal {
  max-width: 30px;
  max-height: 30px;
  position: absolute;
  right: 5px;
  top: 5px;
  background: rgba(255, 255, 255);
  /* border-radius: 5px; *//* box-shadow: 2px 5px 5px #cdcdcd; */
  border: none;
}

.btnPlayVocal {
  max-width: 30px;
  max-height: 30px;
  position: absolute;
  right: 50px;
  top: 5px;
  background: rgba(255, 255, 255);
  border-radius: 5px;
  box-shadow: 2px 5px 5px #cdcdcd;
}

.backView {
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
}

.item {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: #fff;
  padding: 30rpx 0 60rpx 0;
}

.coverEntInf {
  margin-left: 20rpx;
  padding-top: 20rpx;
  display: flex;
}
.coverCompany{
  display: flex;
  padding-top: 34rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 50rpx;
  justify-content: space-between;
}

.coverLogo {
  width: 30%;
  vertical-align: text-bottom;
}

.coverInf {
  vertical-align: text-bottom;
}

.entLogo {
  width: 80%;
  margin:0 auto;
  height: auto;
  border: none;
}

.entInfTitle {
  display: block;
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 10rpx;
}


.entInfTags {
  display: block;
  margin-top: 10rpx;
}

.tag {
  display: inline-block;
  margin-right: 5px;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 5px 6px;
  background: #5f4b8b;
  color: #fff;
  border-radius: 4px;
}
.coverProfile{
  display: flex;
}
.coverField{
  padding-right:8rpx;
  margin-right: 8rpx;
  border-right: 1px solid #333;
  font-size: 28rpx;
  font-weight: normal;
}
.coverField:last-child{
  border:none;
}
.entInfLine {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
}

.entInfName {
  display: inline-block;
  margin-right: 5px;
}


.entInfCount {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  margin-top: 8rpx;
}

.entInfDate {
  display: inline-block;
  font-size: 28rpx;
  color: #333;
}

.coverInput {
  margin-top: 10px;
  width: 85%;
  height: 40px;
  line-height: 40px;
  border-radius: 4px;
  background-color: rgba(255, 255, 255, 1);
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  padding-left: 15rpx;
  padding-right: 15rpx;
  box-shadow: 2px 5px 5px #cdcdcd;
}

.text {
  height: 40px;
  line-height: 40px;
}

.input {
  height: 40px;
  line-height: 40px;
  /* margin-top为text的高度，保持视觉上一致 */
  margin-top: -40px;
}
.dragUp{
  display: block;
  margin: 0 auto;
  width: 60rpx;
  height: 60rpx;
  transform: rotateZ(-90deg);
}