/* pages/mappage/mappage.wxss */

.btnMain {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: #2f78ff;
  color: #fff;
  height: 50px;
  font-size: 18px;
  font-weight: 600;
  line-height: 50px;
  padding: auto;
}
.locContainer{
  box-shadow: 2px 5px 5px #cdcdcd;
  border-radius: 5px;
  position:absolute;
  right:20rpx;
  background:#fff;
  margin: 10px;
  z-index:20;
  padding: 8rpx;
  border-radius: 5px;
}
.btnLoc {
  width: 70rpx;
}

.btnList {
  max-width: 30px;
  max-height: 30px;
  position: absolute;
  bottom: 100px;
  right: 0px;
  background: rgba(255, 255, 255);
  margin: 10px;
  padding: 5px;
  border-radius: 5px;
  box-shadow: 2px 5px 5px #cdcdcd;
  z-index: 20;
}

.btnVocal {
  max-width: 30px;
  max-height: 30px;
  position: absolute;
  right: 5px;
  top: 5px;
  background: rgba(255, 255, 255);
  /* border-radius: 5px; *//* box-shadow: 2px 5px 5px #cdcdcd; */
  border: none;
}

.btnPlayVocal {
  max-width: 30px;
  max-height: 30px;
  position: absolute;
  right: 50px;
  top: 5px;
  background: rgba(255, 255, 255);
  border-radius: 5px;
  box-shadow: 2px 5px 5px #cdcdcd;
}

/* .backView {
  width: 100%;
  height: 100%;
} */

.item {
  position: absolute;
  top: 50rpx;
  left: 5%;
  width: 90%;
  background: #fff;
  padding: 60rpx 0 60rpx 0;
  border-radius: 10px;
}

.coverEntInf {
  margin-left: 20rpx;
  padding-top: 20rpx;
  display: flex;
}
.coverCompany{
  display: flex;
  padding-top: 34rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  justify-content: space-between;
}

.coverLogo {
  width: 30%;
  vertical-align: text-bottom;
}

.coverInf {
  vertical-align: text-bottom;
}

.entLogo {
  width: 80%;
  margin:0 auto;
  height: auto;
  border: none;
}

.entInfTitle {
  display: block;
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 10rpx;
}


.entInfTags {
  display: block;
  margin-top: 10rpx;
}

.tag {
  display: inline-block;
  margin-right: 5px;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 5px 6px;
  background: #5f4b8b;
  color: #fff;
  border-radius: 4px;
}
.coverProfile{
  display: flex;
}
.coverField{
  padding-right:8rpx;
  margin-right: 8rpx;
  border-right: 1px solid #333;
  font-size: 28rpx;
  font-weight: normal;
}
.coverField:last-child{
  border:none;
}
.entInfLine {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
}

.entInfName {
  display: inline-block;
  margin-right: 5px;
}


.entInfCount {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  margin-top: 8rpx;
}

.entInfDate {
  display: inline-block;
  font-size: 28rpx;
  color: #333;
}

.coverInput {
  margin-top: 10px;
  width: 85%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 4px;
  background-color: rgba(255, 255, 255, 1);
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  padding-left: 15rpx;
  padding-right: 15rpx;
  box-shadow: 2px 5px 5px #cdcdcd;
}

.text {
  height: 90rpx;
  line-height: 90rpx;
}

.input {
  height: 90rpx;
  line-height: 90rpx;
  width: 90%;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin: 0 auto;
  /* margin-top为text的高度，保持视觉上一致 */
  
}
.dragUp{
  display: block;
  margin: 0 auto;
  width: 60rpx;
  height: 60rpx;
  transform: rotateZ(-90deg);
}

/**输入框**/
.input-info {
  position: absolute;
  left: 7%;
  top: 40rpx;
  width: 85%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  border-radius: 20px;
  padding: 0px 15px;
  color: #333;
  box-sizing: border-box;
  font-size: 33rpx;
}

.input-info .hide {
  position: relative;
  color: #333;
  top: 26rpx;
  line-height: 90rpx;
  font-size: 33rpx;
}

.findMore{
  position: absolute;
  width: 100%;
  bottom: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
}
.moreContainer{
  display: flex;
  background: #333;
  border-radius: 30px;
  padding: 35rpx 20%;
}
.findMore cover-view{
  color: #fff;
  font-size: 40rpx;
}
.findMore cover-image{
  width: 46rpx;
  margin: 0 10rpx;
}