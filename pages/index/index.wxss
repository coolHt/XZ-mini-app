/**筛选**/
.filter-list{
  width: 100%;
  box-sizing: border-box;
  height: 80rpx;
  position: relative;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}
.item-field{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  display: flex;
  align-items: center;
  padding: 0 20rpx
}
.item-field text{
  font-size: 33rpx;
  color: #333;
  transition: all 0.2s linear;
}
.navClick text {
  color: #2f78ff;
}

.filter-arrow{
  display: block;
  margin-left: 8rpx;
  width: 30rpx;
  height: 30rpx;
  transform: all 0.2s linear;
}
.toggleDirection{
  transform: rotateZ(180deg);
}
.filter-item{
  display: flex;
  justify-content: space-between;
}
.filter-inner{
  width: 100%;
  background: #fff;
}
.innerItem{
  width:90%;
  margin: 0 auto;
  padding: 25rpx 0;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1px solid #f5f5f5;
}
.filterClick {
  display: block;
}
/**搜索结果**/
.task-result{
  width: 100%;
  box-sizing: border-box;
  padding:30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.result-text{
  color: #b1b1b1;
  font-size: 33rpx;
  font-weight: bold;
}
.searchForName {
  color: #333;
  font-size: 33rpx;
  font-weight: bold;
  display: flex;
  align-items: center;

}
.result-text .result-num {
  color: #fa7268;
}
.searchDown{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 33rpx;
  color: #333;
  padding: 40rpx 0;
}
