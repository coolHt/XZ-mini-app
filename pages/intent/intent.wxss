/* pages/intent/intent.wxss */
.intent-container{
}
.intent-title{
  display: block;
  font-size: 33rpx;
  color: #b1b1b1;
  margin-bottom:20rpx;
}
.intent-partition{
  position: relative;
  width: 100%;
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 40rpx;
  box-sizing: border-box;
  border-bottom:10rpx solid #ddd;
}
.previewInfor{
  display: flex;
  width: 100%;
  padding-bottom: 40rpx;
}
.preview-avatar{
  width: 120rpx;
  height: auto;
  margin-right:30rpx;
  border-radius: 50%;
}
.previewName{
  display: flex;
  align-items: center;
}
.name_field {
  color:#333;
  font-size: 40rpx;
  margin-right: 10rpx;
}
.preview-gender{
  display: flex;
  padding: 0 10rpx;
  align-items: center;
  border-radius: 8rpx;
}
.preview-gender image {
  width: 25rpx;
  height: 25rpx;
  margin-right:5rpx;
}
.preview-gender text{
  color: #fff;
  font-size:28rpx;
}
.male_bg{
  background:#7ca4e7;
}
.female_bg{
  background:#fe77a1;
}
.previewAnother{
  display: flex;
  margin-top: 20rpx;
}
.previewAnother text{
  color: #b1b1b1;
  font-size: 28rpx;
  border-right: 1rpx solid #ddd;
  padding-right: 15rpx;
  margin-right: 15rpx;
}
.previewAnother text:last-child {
  border-right: 0
}
.edit_icon{
  width: 20rpx;
  height: auto;
}
.edit-cursor{
  position: absolute;
  right:20px;
  top: 40rpx;
  display: flex;
  align-items: center;
}
.edit-cursor text{
  font-size: 28rpx;
  color: #b1b1b1;
  margin-right: 5rpx;
}