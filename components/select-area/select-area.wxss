.intentBox {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 999;
  transition: all 0.3s linear;
}
.intentJob-header {
  width: 100%;
  background: #fff;
  position: fixed;
  left:0;
  top:0;
}

.intentJob-header text {
  display: block;
  width: 100%;
  color: #333;
  font-size: 36rpx;
  text-align: center;
}

.closeIcon {
  width: 22px;
  height: auto;
  display: block;
  position: absolute;
}
.selectedArea{
  width:100%;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding-left: 20px;
  border-bottom: 1rpx solid #ddd;
}
.currentArea{
  display: flex;
  align-items: center;
  padding:20rpx 20px 20rpx 20rpx;
  background: #fafafa;
}
.currentArea text{
  font-size: 33rpx;
  margin-right: 15rpx;
  color: #333;
}
.triangle_down{
  border:10rpx solid #e6e6e6;
  border-left-color: #fff;
  border-right-color: #fff;
  border-bottom-color: #fff;
  margin-top: 10rpx;
}
.selectedList{
  padding-top: 10rpx;
  display: flex;
  align-items: center;
}
.selectedListTitle{
  color:#333;
  font-size: 33rpx;
  margin-right: 10rpx;
}
.selectedTags{
  display: flex;
  padding: 5rpx 20rpx;
  border-radius: 10px;
  background :#fa7268;
  margin-right: 10rpx;
  align-items: center;
}
.selectedTags text{
  font-size: 28rpx;
  color: #fff;
  margin-right: 10rpx;
}
.selectedTags image{
  width: 22rpx;
  height: auto;
}
.areaContainer{
  padding-top: 10rpx;
}
.areaItem{
  width: 100%;
  padding: 28rpx 20px;
  color: #333;
  font-size: 28rpx;
  border-bottom: 1px solid #ddd;
  box-sizing: border-box;
  white-space: nowrap;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}
.cityContainer{
  position: fixed;
  left:0; 
  top:0;
  width: 100%;
  background: #f1f1ef;
}
.cityContainer .intentJob-header {
  background: #f1f1ef;
}
.searchCity{
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 20px;
  background: #f5f5f5;
}
.searchCity input{
  display: block;
  width: 100%;
  background: #fff;
  height: 70rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.cityPartition{
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 20px 0 20px; 
}
.cityType{
  display: block;
  font-size: 33rpx;
  color: #b1b1b1;
  margin-bottom: 30rpx;
}
.city-item{
  padding: 20rpx 0;
  color: #333;
  font-size: 28rpx;
  background :#fff;
  width: 28%;
  margin-bottom: 30rpx;
  text-align: center;

}
.cityRow{
  widows: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.ranking-item{
  width: 100%;
  padding:0 20px;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}
.ranking-Title{
  font-size: 33rpx;
  color: #333;
  margin-bottom: 30rpx;
}
.single-city{
  font-size: 28rpx;
  color: #333;
  border-bottom: 1px solid #b1b1b1;
  padding: 20rpx 10rpx;
  width: 100%;
  box-sizing: border-box;
}
.column_route{
  display: block;
  color: #b1b1b1;
  font-size:25rpx;
  margin-bottom: 5rpx;
  text-align: center;
}
.columnSearch{
  position:fixed;
  right:0;
  width: 20px;
  top:20%;
}