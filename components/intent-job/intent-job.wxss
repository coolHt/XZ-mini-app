/* components/intent-job/intent-job.wxss */
.intentContainer{
  width: 100%;
  display: flex;
}
.intentList{
  transition:all 0.2s linear;
}
.intentChild{
  width:0;
  overflow: hidden;
  position: relative;
  height: auto;
  background: #f1f1f1;
  transition:all 0.2s linear;
}
.intent-first{
  width: 100%;
  padding: 28rpx 20px;
  color: #333;
  font-size: 28rpx;
  border-bottom: 1px solid #ddd;
  box-sizing: border-box;
  white-space: nowrap;
}